<div class="mt-4">
    <h3>Update course</h3>
    <form method="POST" action="/courses/{{course._id}}">
        <div class="form-group">
            <label for="name">Tên khóa học</label>
            <input type="text" class="form-control" value="{{course.name}}" id="name" name="name"
                placeholder="Tên khóa học">
        </div>
        <div class="form-group">
            <label for="description">Mô tả</label>
            <input type="text" class="form-control" value="{{course.description}}" id="description" name="description"
                placeholder="Mô tả khóa học">
        </div>
        <div class="form-group">
            <label for="img">Hình ảnh</label>
            <input type="text" class="form-control" value="{{course.name}}" id="img" name="img"
                placeholder="Mô tả khóa học">
        </div>
        <div class="form-group">
            <label for="videoId">video ID</label>
            <input type="text" class="form-control" value="{{course.videoId}}" id="videoId" name="videoId"
                placeholder="video ID">
        </div>
        <button type="submit" class="btn btn-primary">Save change</button>
    </form>
</div>